<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/tvPerguntaQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pergunta"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etRespostaQuiz"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etRespostaQuiz"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:hint="Escreva sua resposta aqui:"
        app:layout_constraintTop_toBottomOf="@id/tvPerguntaQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnEnviarResposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@id/etRespostaQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_margin="80dp"
        android:layout_marginTop="280dp"
        android:text="Voltar"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:backgroundTint="@color/colorRank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEnviarResposta" />

</androidx.constraintlayout.widget.ConstraintLayout>
